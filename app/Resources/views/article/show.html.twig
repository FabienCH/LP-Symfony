{% extends "mi06VitrineBundle::backoffice.layout.html.twig" %}
{% block content %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ article.libelle }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ article.prix }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ article.stock }}</td>
            </tr>
        </tbody>
    </table>


    <p>
        <a href="{{ path('article_index') }}">Retour</a><br/>
        <a href="{{ path('article_edit', { 'id': article.id }) }}">Edit</a><br/>
        {{ form_start(delete_form) }}
            <input class="btn btn-default" type="submit" value="Delete">
        {{ form_end(delete_form) }}
    </p>
{% endblock %}
