{% extends "mi06VitrineBundle::backoffice.layout.html.twig" %}
{% block content %}
    <h1>Commande</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commande.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if commande.date %}{{ commande.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ commande.etat }}</td>
            </tr>
        </tbody>
    </table>

    <p>
        <a href="{{ path('commande_index') }}">Retour</a><br/>
        <a href="{{ path('commande_edit', { 'id': commande.id }) }}">Edit</a>
    </p>
{% endblock %}
