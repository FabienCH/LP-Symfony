{% extends "mi06VitrineBundle::layout.html.twig" %}
{% block content %}
    <h1>Me connecter</h1>
    <div class="row">
        <div class="col-lg-6">
            <form action="{{ path('mi06_client_login') }}" method="post">
                {% if error %}
                    <div class="alert alert-warning">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="form-group">
                    <label for="username">Username:</label>
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input class="form-control" type="password" id="password" name="_password" />
                </div>
                <input type="hidden" name="_target_path" value="{{ path('mi06_vitrine_homepage') }}" />
                <div class="form-group">
                    <button class="btn btn-default" type="submit">Me connecter</button>
                </div>
            </form>
            <p>Pas de compte ? <a href="{{ path('client_new') }}">Cr√©er mon compte</a></p>
        </div>
    </div>
{% endblock %}
