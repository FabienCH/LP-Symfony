{% extends "mi06VitrineBundle::layout.html.twig" %}
{% block content %}
    <h1>Mon Profil</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ client.nom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ client.email }}</td>
            </tr>
        </tbody>
    </table>

    <p>
        <a href="{{ path('client_edit', { 'id': client.id }) }}">Modifier mes informations</a>
    </p>
{% endblock %}
