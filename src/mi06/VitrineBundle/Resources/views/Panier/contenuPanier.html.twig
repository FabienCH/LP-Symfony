{% extends "mi06VitrineBundle::layout.html.twig" %}
{% block content %}
    <div class="col-lg-9">
        <h1>Votre panier</h1>
        <div class="col-lg-12">
            {% if panier %}
                <ul class="list-group">
                    {% for article in articles %}
                        <li class="list-group-item">{{ article.libelle }} {{ article.prix }} {{ panier.contenu[article.id] }}</li>
                    {% endfor %}
                </ul>
                <p>Total : {{ totalPanier }}<p>
                <p><a href="/validationPanier">Commander</a><p>
                <p><a href="/viderPanier">Vider le panier</a><p>
            {% else %}
                <p>Votre panier est vide<p>
            {% endif %}           
        <!-- /.row -->
        </div>
    </div>
    <!-- /.col-lg-9 -->
{% endblock %}